<p id="notice"><%= notice %></p>

<h1>Picks - Saison <%= @max_season %></h1>
<h5>Choisir une semaine ...</h5>

<div class="btn-group" role="group">
  <% @picks.each_with_index do |pick, i| %>
    <% if (pick != nil) then %>
      <a href="<%= url_for pick %>"
        class="btn btn-outline-secondary btn-lg"
        role="button">
          <%= get_week_name(i+1) %>
      </a>
    <% else %>
      <a href="<%= url_for new_pick_path_url(:season=> @max_season, :week=> i+1) %>"
        class="btn btn-primary btn-lg"
        role="button">
          <%= get_week_name(i+1) %>
      </a>
    <% end %>
  <% end %>
</div>
