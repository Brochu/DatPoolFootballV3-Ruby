<p id="notice"><%= notice %></p>

<h1>Picks</h1>

<table>
  <thead>
    <tr>
      <th>Season</th>
      <th>Week</th>
      <th>Pickstring</th>
      <th>Pooler</th>
      <th>Pool</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picks.each do |pick| %>
      <% if pick != nil then %>
        <tr>
          <td><%= pick.season %></td>
          <td><%= pick.week %></td>
          <td><%= pick.pickstring %></td>
          <td><%= pick.pooler_id %></td>
          <td><%= link_to 'Show', pick %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pick', new_pick_path_url(:season=> 2020, :week=> 1) %>
