<p id="notice"><%= notice %></p>

<h1>Poolers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Favteam</th>
      <th>Pool</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poolers.each do |pooler| %>
      <tr>
        <td><%= pooler.name %></td>
        <td><%= pooler.favTeam %></td>
        <td><%= pooler.pool_id %></td>
        <td><%= pooler.user_id %></td>
        <td><%= link_to 'Show', pooler %></td>
        <td><%= link_to 'Edit', edit_pooler_path(pooler) %></td>
        <td><%= link_to 'Destroy', pooler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

